
@page
@model RazorPage.Pages.Boats.IndexModel
@{
    ViewData["Title"] = "Vores Både";
}

<h1>Vores Både</h1>
<h2>Vi har @Model.Boats.Count  både tilgængelige</h2>

<p>
    <a as asp-page="CreateBoat">Opret en ny båd</a>
</p>

<table class="table">
    <thead>

        <tr>
            <th>ID</th>
            <th>Byggeår</th>
            <th>Model</th>
            <th>Bådtype</th>
            <th>Sejlnummer</th>
            <th>Motorinfo</th>
            <th>Dybgang</th>
            <th>Bredde</th>
            <th>Længde</th>
            <th>Vedligeholdesesstatus</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Boats)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.YearOfConstruction</td>
                <td>@item.Model</td>
                <td>@item.TheBoatType</td>
                <td>@item.SailNumber</td>
                <td>@item.EngineInfo</td>
                <td>@item.Draft</td>
                <td>@item.Width</td>
                <td>@item.Length</td>
                <td>@item.Maintenance</td>
            </tr>

        }

    </tbody>
</table>